            <div class="card-body">
                <div class="chart-placeholder">
                    <svg width="100%" height="200" viewBox="0 0 400 200">
                        <rect x="50" y="140" width="40" height="60" fill="var(--primary-light)" />
                        <rect x="110" y="100" width="40" height="100" fill="var(--primary-color)" />
