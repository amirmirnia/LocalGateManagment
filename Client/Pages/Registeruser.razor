@page "/Registeruser"
@inherits AppComponentBase
@attribute [Authorize]

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4>ثبت کاربر جدید</h4>
                </div>
                <div class="card-body">
                    <EditForm Model="@newUser" OnValidSubmit="HandleValidSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">نام</label>
                                <InputText class="form-control" @bind-Value="newUser.FirstName" />
                                <ValidationMessage For="@(() => newUser.FirstName)" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">نام خانوادگی</label>
                                <InputText class="form-control" @bind-Value="newUser.LastName" />
                                <ValidationMessage For="@(() => newUser.LastName)" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">ایمیل</label>
                                <InputText type="email" class="form-control" @bind-Value="newUser.Email" />
                                <ValidationMessage For="@(() => newUser.Email)" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">رمز عبور</label>
                                <InputText type="password" class="form-control" @bind-Value="newUser.Password" />
                                <ValidationMessage For="@(() => newUser.Password)" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">نقش کاربر</label>
                                <InputSelect class="form-control" @bind-Value="newUser.Role">
                                    @foreach (var role in Enum.GetValues<UserRole>())
                                    {
                                        <option value="@role">@role</option>
                                    }
                                </InputSelect>
                                <ValidationMessage For="@(() => newUser.Role)" />
                            </div>
                        </div>

                        <div class="d-flex gap-2 mb-3">
                            <button type="submit" class="btn btn-primary" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                    <span>در حال ثبت...</span>
                                }
                                else
                                {
                                    <span>ثبت کاربر</span>
                                }
                            </button>
                            <button type="button" class="btn btn-warning" @onclick="ClearForm">
                                پاک کردن فرم
                            </button>
                        </div>



                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">
                                @errorMessage
                            </div>
                        }
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private RegisteUserDto newUser = new RegisteUserDto();
    private bool isLoading = false;
    private string errorMessage;

    private async Task HandleValidSubmit()
    {
        isLoading = true;
        errorMessage = string.Empty;

        try
        {
            if (await User.RegisterUser(newUser))
            {
                AlertService.Show("ثبت کاربر انجام شد");
                NavManager.NavigateTo("/Listusers");
            }
            else
            {
                errorMessage="ثبت کاربر با مشکل مواجه شد";
            }
            
            NavManager.NavigateTo("/Listusers");
        }
        catch (Exception ex)
        {
            errorMessage=$"خطا در ثبت: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ClearForm()
    {
        newUser = new RegisteUserDto();
        errorMessage = string.Empty;
    }
}
